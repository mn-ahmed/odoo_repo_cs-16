<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="form_ward_views">
            <field name="name">Ward views</field>
            <field name="model">guj_vidhansabha.ward</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                       <group>
                        <field name="name" />
                        <field name="guj_name" />
                        <field name="booth" />
                        <field name="ward_no" />
                        <field name="company_id" />
                        <!-- <field name="booth_count" /> -->
                       </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tree_ward_views">
            <field name="name">Ward views</field>
            <field name="model">guj_vidhansabha.ward</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="guj_name" />
                    <field name="booth" />
                    <field name="ward_no" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ward_view">
            <field name="name">Ward Views</field>
            <field name="res_model">guj_vidhansabha.ward</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="view_id" ref="form_booth_personnel"/> -->
        </record>
    </data>
</odoo>